{
  "presets": [
    "es2015",
    "react",
    "stage-2"
  ],
  "plugins": [
    "babel-plugin-espower"
  ],
  "env": {
    "development": {
      "plugins": [
        [ "react-transform", {
          "transforms": [
            {
              "transform": "react-transform-hmr",
              "imports": ["react"],
              "locals": ["module"]
            },
            {
              "transform": "react-transform-catch-errors",
              "imports": ["react", "redbox-react"]
            }
          ]
        } ]
      ]
    }
  }
}
